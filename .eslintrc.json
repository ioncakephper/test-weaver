{
  "env": {
    "es2021": true,
    "node": true,
    "jest": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:jsdoc/recommended",
    "plugin:markdown/recommended",
    "prettier"
  ],
  "parserOptions": {
    "ecmaVersion": "latest"
  },
  "rules": {
    "no-unused-vars": "warn"
  },
  "overrides": [
    {
      "files": ["src/index.js", "scripts/**/*.js"],
      "rules": {
        "no-console": "off"
      }
    }
  ],
  "plugins": ["markdown", "jsdoc"]
}
